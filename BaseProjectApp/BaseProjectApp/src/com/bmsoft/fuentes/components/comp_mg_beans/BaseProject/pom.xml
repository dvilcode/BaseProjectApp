		<junit.version>4.8.1</junit.version>
		<tomcat-servlet-api.version>7.0.50</tomcat-servlet-api.version>
		<javax.servlet.jstl.version>1.1.2</javax.servlet.jstl.version>
		<standard.version>1.1.2</standard.version>
		<com.oracle.ojdbc14.version>10.2.0.5.0</com.oracle.ojdbc14.version>
		<org.hibernate.version>5.4.24.Final</org.hibernate.version>
		<log4j.version>1.2.17</log4j.version>
