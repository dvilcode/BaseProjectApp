		<!-- libraria de cache-->
		  <dependency>
               <groupId>net.sf.ehcache</groupId>
    		<artifactId>ehcache</artifactId>
   			 <version>${net.sf.ehcache.version}</version>
        </dependency>
		<!-- END libraria de cache-->
